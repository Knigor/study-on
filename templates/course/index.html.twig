{% extends 'base.html.twig' %}

{% block title %}Courses{% endblock %}

{% block body %}
    <h1>Курсы</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>

                <td><a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.name }}</a></td>
                <td>{{ course.description }}</td>
                <td>
                    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать</a>
                    <a href="{{ path('app_course_delete', {'id': course.id}) }}" onclick="return confirm('Are you sure?')">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No courses found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
    <a href="{{ path('app_course_new') }}">Создать новый курс</a>
{% endblock %}
